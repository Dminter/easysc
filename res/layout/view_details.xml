<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvPage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="1/50"
                android:layout_marginRight="5dip"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:textSize="20sp"
                android:gravity="center"
                android:text="静夜思"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="李白"
                android:layout_marginRight="5dip"
                android:textColor="@color/gray" />


            <TextView
                android:id="@+id/tvContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="left"
                android:text="At the heart of GitHub is an open source version control system (VCS) called Git*. Created by the same team that created Linux, Git is responsible for everything GitHub related that happens locally on your computer."
                android:textColor="@color/black" />


            <RelativeLayout
                android:id="@+id/rlHide"
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:minHeight="25dip"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="注解"
                    android:layout_marginLeft="5dip"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/ivArrows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/iv_arrow_down" />


            </RelativeLayout>


            <View style="@style/label_split" />

            <LinearLayout
                android:id="@+id/llDetails"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:text="At the heart of GitHub is an open source version control system (VCS) called Git*. Created by the same team that created Linux, Git is responsible for everything GitHub related that happens locally on your computer."
                    android:textColor="@color/black" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>